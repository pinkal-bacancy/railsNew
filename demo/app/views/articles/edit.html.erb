<h1>Edit article</h1>
<%= form_for @article do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>
 
  <p>
    <%= form.submit "Update Me"%>
  </p>
 <%= link_to 'Back', articles_index_path %>

 <%end%>
